@model SmartSEO.Models.Article
@{
    ViewBag.Title = "添加文章";
}

<div class="span2">
    <div class="well sidebar-nav">
        @Html.Partial("_QuickMenu")
    </div>
</div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Content("~/")">网络营销</a><span class="divider">/</span></li>
        <li><a href="@Url.Content("~/Article/")">优化文章</a><span class="divider">/</span></li>
        <li class="active">添加文章</li>
    </ul>
    <fieldset>
        <legend>添加文章</legend>
        <form class="form-vertical" action="@Url.Content("~/Article/Add")" method="post">
        <div class="control-group">
            <label class="control-label">文章标题</label>
            <div class="controls">
                <input type="text" class="span12" name="Title" value="@Model.Title">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">文章内容</label>
            <div class="controls">
                <textarea name="Content" class="ckeditor span12" id="Content">
                    @Model.Content
                </textarea>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">备注信息</label>
            <div class="controls">
                <input type="text" name="Remark" class="span6" value="@Model.Remark">
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                提交
            </button>
            <button type="button" class="btn">
                取消
            </button>
        </div>
        </form>
    </fieldset>
</div>
