@using Webdiyer.WebControls.Mvc
@model PagedList<SmartSEO.Models.WorlkLog>
@{
    ViewBag.Title = "日报管理";
}
<div class="span2">
    <div class="well sidebar-nav">
        @Html.Partial("Custom/_QuickMenu")
    </div>
</div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Content("~/")">网络营销</a><span class="divider">/</span> </li>
        <li><a href="@Url.Content("~/WorlkLog/")">日报管理</a><span class="divider">/</span>
        </li>
        <li class="active">浏览日报</li>
    </ul>
    <fieldset>
        <legend>浏览日报</legend>
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th style="text-align: center;">
                        用户姓名
                    </th>
                    <th style="width: 75px; text-align: center;">
                        使用时间
                    </th>
                    <th style="text-align: center;">
                        工作内容
                    </th>
                    <th style="text-align: center;">
                        日期时间
                    </th>
                    <th style="width: 75px; text-align: center;">
                        常用操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.Count(); i++)
                    {
                    <tr>
                        <td style="text-align: left;">
                            <a target="_blank" title="点击查看详情">
                                @Model[i].UserName.UserName;
                            </a>
                        </td>
                        <td style="text-align: center;">
                            @Model[i].UseTime
                        </td>
                        <td style="text-align: center;">
                            @Model[i].WorlkContent
                        </td>
                        <td style="text-align: center;">
                            @Model[i].CreateTime.ToString("yyyy-MM-dd");
                        </td>
                        <td style="text-align: center;">
                            <a href="@Url.Content("~/WorlkLog/Edit?id=")@Model[i].ID" class="btn">修改</a>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </fieldset>
    <!--分页开始 page页码-->
    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "page" })
    @if (Model != null && Model.Count == 0)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">
                提示</h4>
            暂无查询到数据。
        </div>
    }
</div>
