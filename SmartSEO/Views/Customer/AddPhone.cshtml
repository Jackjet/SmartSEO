@model SmartSEO.Models.Phone
@{
    ViewBag.Title = "添加电话";
}
<div class="span2">
    <div class="well sidebar-nav">
        @Html.Partial("Custom/_QuickMenu")
    </div>
</div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Content("~/")">网络营销</a><span class="divider">/</span> </li>
        <li><a href="@Url.Content("~/Customer/")">客户管理</a><span class="divider">/</span>
        </li>
        <li class="active">添加电话</li>
    </ul>
    <fieldset>
        <legend>添加电话</legend>
        <form class="form-horizontal" action="@Url.Content("~/Customer/AddPhone")" method="post">
        <div class="control-group">
            <label class="control-label">
                电话号码</label>
            <div class="controls">
                <input type="text" name="Number" class="span2" value="@Model.Number">
                <input type="hidden" name="Customer_ID" 
                    value="@ViewBag.Customer_ID" />
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                号码类型</label>
            <div class="controls">
                <input type="text" name="PhoneType" class="span2" value="@Model.PhoneType">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                号码备注</label>
            <div class="controls">
                <input type="text" name="Remark" class="span6" value="@Model.Remark">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                提交
            </button>
            <button type="button" class="btn">
                取消
            </button>
        </div>
        </form>
    </fieldset>
</div>
