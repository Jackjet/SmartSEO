@model SmartSEO.Models.Customer
@{
    ViewBag.Title = "编辑客户";
}
<div class="span2">
    <div class="well sidebar-nav">
        @Html.Partial("Custom/_QuickMenu")
    </div>
</div>
<div class="span10">
    <ul class="breadcrumb">
        <li><a href="@Url.Content("~/")">网络营销</a><span class="divider">/</span> </li>
        <li><a href="@Url.Content("~/Customer/")">客户管理</a><span class="divider">/</span>
        </li>
        <li class="active">编辑客户</li>
    </ul>
    <fieldset>
        <legend>编辑客户</legend>
        <form class="form-horizontal" action="@Url.Content("~/Customer/Edit")" method="post">
        <div class="control-group">
            <label class="control-label">
                姓名</label>
            <div class="controls">
                <input type="text" name="UserName" class="span6" value="@Model.UserName">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                性别</label>
            <div class="controls">
                <select name="Sex" class="span2">
                    <option selected="selected" value="0">男</option>
                    <option value="-1">女</option>
                </select>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                年龄</label>
            <div class="controls">
                <input type="text" name="Age" class="span2" value="@Model.Age">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                职位</label>
            <div class="controls">
                <input type="text" name="Role" class="span6" value="@Model.Role">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                住址</label>
            <div class="controls">
                <input type="text" name="Address" class="span6" value="@Model.Address">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                籍贯</label>
            <div class="controls">
                <input type="text" name="Origin" class="span6" value="@Model.Origin">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                渠道</label>
            <div class="controls">
                <input type="text" name="Channel" class="span6" value="@Model.Channel">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                提交
            </button>
            <button type="button" class="btn">
                取消
            </button>
        </div>
        </form>
    </fieldset>
</div>
